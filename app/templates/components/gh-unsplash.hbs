<div class="gh-unsplash">
    <div class="gh-unsplash-container">
        <a class="gh-unsplash-logo" href="https://unsplash.com" target="_blank">{{inline-svg "unsplash"}}</a>
        <div class="gh-unsplash-close" aria-role="button">{{inline-svg "close"}}</div>
        <header class="gh-unsplash-header">
            <h1 class="gh-unsplash-header-title">Unsplash</h1>
            <p class="gh-unsplash-header-desc">Beautiful, free photos.<br>
Gifted by the world‚Äôs most generous community of photographers. üéÅ</p>
            <span class="gh-input-icon">
                {{inline-svg "search"}}
                {{gh-input model.email
                    class="gh-unsplash-search"
                    type="text"
                    name="searchKeyword"
                    placeholder="Search free high-resolution photos"
                    tabindex="1"
                    autocorrect="off"
                    value=""
                }}
            </span>
        </header>
        <section class="gh-unsplash-grid">
            {{#each unsplash.photos as |photo|}}
                <a class="gh-unsplash-photo" style="background-color:{{photo.color}};" href="#">
                    <img src="{{photo.urls.regular}}" alt="" />
                    <div class="gh-unsplash-photo-overlay">
                        <div class="gh-unsplash-photo-header">
                            <div class="gh-unsplash-photo-author">
                                <a class="gh-unsplash-photo-author-img" href="{{photo.user.links.html}}" target="_blank">
                                    <img src="{{photo.user.profile_image.medium}}" />
                                </a>
                                <a class="gh-unsplash-photo-author-name" href="{{photo.user.links.html}}" target="_blank">
                                    {{photo.user.name}}
                                </a>
                            </div>
                            <a class="gh-unsplash-button" href="{{photo.links.html}}" target="_blank">{{inline-svg "unsplash-heart"}}{{photo.likes}}</a>
                        </div>
                        <div class="gh-unsplash-photo-footer">
                            <a class="gh-unsplash-button" href="{{photo.links.download}}/?force=true">Download</a>
                            <a class="gh-unsplash-button" href="#">Insert</a>
                        </div>
                    </div>
                </a>
            {{/each}}
        </section>
    </div>
</div>
